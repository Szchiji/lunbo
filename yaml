services:
  - type: web
    name: telegram-webhook
    env: python
    buildCommand: |
      pip install --upgrade pip
      pip install python-telegram-bot fastapi uvicorn
    startCommand: uvicorn bot:app --host 0.0.0.0 --port 10000
    envVars:
      - key: TELEGRAM_BOT_TOKEN
        value: your_bot_token
